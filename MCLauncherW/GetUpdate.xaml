<Window x:Class="MCLauncherW.GetUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CheckUpdate" Height="125" Width="267" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="with256.ico">
    <Grid>
        <ProgressBar x:Name="downloadingProcess" HorizontalAlignment="Left" Height="20" Margin="10,33,0,0" VerticalAlignment="Top" Width="230"/>
        <Label x:Name="downloadingLable" Content="" HorizontalAlignment="Left" Margin="10,3,0,0" VerticalAlignment="Top"/>
        <Button x:Name="cancelButton" Content="{DynamicResource cancel}" HorizontalAlignment="Left" Margin="165,58,0,0" VerticalAlignment="Top" Width="75" Height="19" IsDefault="True" Click="cancelButton_Click"/>

    </Grid>
</Window>
